@model _301230968_Zhang__Lab03.Models.User

@{
    ViewData["Title"] = "Login";
}
@if (TempData["Message"] != null)
{
    <div id="tempMessage" class="alert alert-success">
        @TempData["Message"]
    </div>
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="text-center mb-3">User Login</h2>
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Username" class="control-label">Username</label>
                            <input asp-for="Username" class="form-control" placeholder="Please enter your username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Password" class="control-label">Password</label>
                            <input asp-for="Password" class="form-control" placeholder="Please enter your password" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center mb-2">
                            <input type="submit" value="Login" class="btn btn-outline-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>