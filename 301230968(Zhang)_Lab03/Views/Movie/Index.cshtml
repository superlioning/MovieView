                    }
                    alert(message);
                }
            });

            $("#confirmationModal").modal("hide");
        });

        // Explicitly handle modal dismissal for Cancel button
        $(document).on("click", ".btn-secondary", function () {
            $("#confirmationModal").modal("hide");
        });

        // Close the modal when the "X" button is clicked
        $(document).on("click", ".close", function () {
            $("#confirmationModal").modal("hide");
        });

    </script>
    }
}